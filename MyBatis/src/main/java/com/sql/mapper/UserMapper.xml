<?xml version="1.0" encoding="UTF-8" ?> <!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sql.mapper.UserMapper">
    <select id="selectUser" resultType="com.sql.pojo.User">
        select *
        from user
    </select>

    <!--    -->
    <select id="selectUserById" resultType="com.sql.pojo.User">
        select *
        from user
        where id = #{id}
    </select>

    <insert id="addUser" parameterType="com.sql.pojo.User">
        insert into user (id, name, pwd)
        values (#{id}, #{name}, #{pwd})
    </insert>

    <update id="updateUser" parameterType="com.sql.pojo.User">
        update user
        set name=#{name},
            pwd=#{pwd}
        where id = #{id}
    </update>

    <delete id="deleteUser" parameterType="int">
        delete
        from user
        where id = #{id}
    </delete>


</mapper>